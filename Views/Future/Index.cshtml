@model MeyawoPortfolio.Models.TblFuture

@{
    ViewBag.Title = "Future";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Future</h2>

@using (Html.BeginForm("Index", "Future", FormMethod.Post))
{
    @Html.HiddenFor(model => model.FutureId)

    <div class="form-group">
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Header,new { @class="form-control" ,style = "border:solid" })
    </div>

    <div class="form-group">
        <label>Ad Soyad</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", style = "border:solid" })
    </div>

    <div class="form-group">
        <label>Unvan</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", style = "border:solid" })
    </div>

    <button class="btn btn-success" type="submit">Güncelle</button>
}
