@model List<MeyawoPortfolio.Models.TblContact>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Gelen Mesajlar</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Gönderen</th>
            <th>Kategori</th>
            <th>Tarih</th>
            <th>Mesajı Aç</th>
            <th>Mesajı Sil</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            if (item.IsRead == true)
            {
                <tr>
                    <td>@item.ContactId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.MessageCategory</td>
                    <td>@item.SendDate</td>
                    <td><a href="/Contact/MessageDetail/@item.ContactId" class="btn btn-primary">Mesajı Aç</a></td>
                    <td><a href="/Contact/DeleteMessage/@item.ContactId" class="btn btn-danger">Mesajı Sil</a></td>
                </tr>
            }
            else
            {
                <tr style="font-weight: bold;">
                    <td>@item.ContactId</td>
                    <td>@item.NameSurname</td>
                    <td>@item.MessageCategory</td>
                    <td>@item.SendDate</td>
                    <td><a href="/Contact/MessageDetail/@item.ContactId" class="btn btn-primary">Mesajı Aç</a></td>
                    <td><a href="/Contact/DeleteMessage/@item.ContactId" class="btn btn-danger">Mesajı Sil</a></td>
                </tr>
            }

        }
    </tbody>
</table>