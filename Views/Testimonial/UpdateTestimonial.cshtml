@model MeyawoPortfolio.Models.TblTestimonial

@{
    ViewBag.Title = "Güncelle";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Referans Güncelle</h2>
<hr />
@using (Html.BeginForm("UpdateTestimonial", "Testimonial", FormMethod.Post))
{
    @Html.HiddenFor(x => x.TestimonialId)
    <div class="form-group">
        <label>Ad Soyad</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", style = "border:solid" })
    </div>

    <div class="form-group">
        <label>Resim Url</label>
        @Html.TextBoxFor(x => x.ImageUrl, new { @class = "form-control", style = "border:solid" })
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", style = "border:solid" })
    </div>
    <div class="form-group">
        <div class="checkbox">
            @Html.EditorFor(x => x.Status)<span> Aktif Mi?</span>
        </div>
    </div>
    <a href="/Testimonial/Index/" class="btn btn-primary">< Referans Listesi</a>
    <button class="btn btn-success" type="submit">Güncelle</button>

}

