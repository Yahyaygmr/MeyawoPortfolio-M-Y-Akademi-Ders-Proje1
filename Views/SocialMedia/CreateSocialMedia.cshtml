@model MeyawoPortfolio.Models.TblSocialMedia

@{
    ViewBag.Title = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/_Layout.cshtml";
}

<h2>Sosyal Medya Hesabı Ekle</h2>
<hr />
@using (Html.BeginForm("CreateSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="form-group">
        <label>Sosyal Medya Adı</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control", style = "border:solid" })
    </div>

    <div class="form-group">
        <label>İkon</label>
        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control", style = "border:solid" })
    </div>

    <div class="form-group">
        <label>Url</label>
        @Html.TextBoxFor(x => x.Url, new { @class = "form-control", style = "border:solid" })
    </div>
    <a href="/SocialMedia/Index/" class="btn btn-primary">< Sosyal Medya Listesi</a>
    <button class="btn btn-success" type="submit">Ekle</button>

}


